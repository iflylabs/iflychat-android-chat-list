<resources>

    <style name="AppTheme" parent="android:Theme.Light" />


    <style name="Theme.Tabviewstyle" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_tabviewstyle</item>
        <item name="popupMenuStyle">@style/PopupMenu.Tabviewstyle</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Tabviewstyle</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Tabviewstyle</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Tabviewstyle</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Tabviewstyle</item>
        <item name="actionModeBackground">@drawable/cab_background_top_tabviewstyle</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_tabviewstyle</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Tabviewstyle</item>


    </style>

    <style name="ActionBar.Solid.Tabviewstyle" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_tabviewstyle</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_tabviewstyle</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_tabviewstyle</item>
        <item name="progressBarStyle">@style/ProgressBar.Tabviewstyle</item>
    </style>



    <style name="ActionBar.Transparent.Tabviewstyle" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_tabviewstyle</item>
        <item name="progressBarStyle">@style/ProgressBar.Tabviewstyle</item>
    </style>

    <style name="PopupMenu.Tabviewstyle" parent="@style/Widget.Sherlock.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_tabviewstyle</item>
    </style>

    <style name="DropDownListView.Tabviewstyle" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_tabviewstyle</item>
    </style>

    <style name="ActionBarTabStyle.Tabviewstyle" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_tabviewstyle</item>
    </style>

    <style name="DropDownNav.Tabviewstyle" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_tabviewstyle</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_tabviewstyle</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_tabviewstyle</item>
    </style>

    <style name="ProgressBar.Tabviewstyle" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_tabviewstyle</item>
    </style>

    <style name="ActionButton.CloseMode.Tabviewstyle" parent="@style/Widget.Sherlock.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_tabviewstyle</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Tabviewstyle.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Tabviewstyle</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Tabviewstyle</item>
    </style>

</resources>